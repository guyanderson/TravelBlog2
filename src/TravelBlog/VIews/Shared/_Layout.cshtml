<!DOCTYPE html>

<html>
<head>
    <script type="text/javascript" src="/scripts/jquery-3.2.1.js"></script>
    <link rel="stylesheet" type="text/css" href="~/styles/bootstrap.css" />
    <link rel="stylesheet" type="text/css" href="~/styles/Styles.css" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
</head>
<body>
    

    <div class="jumbotron">
        <nav class="navbar navbar-default" role="navigation">
            <div class="container-fluid">
                <!-- Brand and toggle get grouped for better mobile display -->
                <div class="navbar-header">
                    @Html.ActionLink("Home", "Index", "Location", null, new { @class = "navbar-brand" })
                </div>

                <!-- Collect the nav links, forms, and other content for toggling -->
                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Experiences", "Index", "Experience", null, new { @class = "nav navbar-nav" })</li>
                        <li>@Html.ActionLink("Regions", "Index", "Regions", null, new { @class = "nav navbar-nav" })</li>
                        <li>@Html.ActionLink("Suggestions", "Index", "Suggestion", null, new { @class = "nav navbar-nav" })</li>
                    </ul>
                </div><!-- /.navbar-collapse -->
            </div><!-- /.container-fluid -->
        </nav>
        <div class="container">
            <h2>TRAVEL BLOG</h2>
        </div>
    </div>
    <div class="container">
        @RenderBody()
    </div>
</body>
</html>